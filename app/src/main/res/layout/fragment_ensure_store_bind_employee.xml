<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_round_bg"
    android:orientation="vertical">


    <TextView
        android:text="绑定员工"
        android:textColor="#333333"
        android:textSize="54px"
        android:layout_marginTop="27px"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="请选择绑定的员工:"
        android:layout_marginLeft="63px"
        android:textColor="#666666"
        android:textSize="42px"
        android:layout_marginTop="50px"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="50px"
        android:background="@color/bgColor"
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:layout_height="480px"/>
    
    
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="60px"
        android:layout_marginTop="42px"
        android:layout_marginBottom="30px"
        android:layout_marginRight="60px"
        android:layout_height="80px">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0px"
            android:background="@drawable/shape_btn_round_unenable_color"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="#FFF"
            android:layout_marginRight="100px"
            android:textSize="36px"
            />

        <Button
            android:id="@+id/btnEnsure"
            android:layout_width="0px"
            android:background="@drawable/shape_btn_round_app_color"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="100px"
            android:text="确定"
            android:textColor="#FFF"
            android:textSize="36px"
            />



    </com.zhy.autolayout.AutoLinearLayout>

</LinearLayout>