<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_round_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingBottom="36px"
            android:paddingTop="46px"
            android:text="请输入支付密码"
            android:textColor="#333333"
            android:textSize="51px" />


        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="141px"
            android:layout_height="121px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="35px"
            android:paddingTop="35px"
            android:paddingLeft="45px"
            android:paddingRight="45px"
            android:src="@mipmap/close" />


    </com.zhy.autolayout.AutoRelativeLayout>


    <TextView
        android:id="@+id/tvWithdrawTips"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="42px"
        android:text="提现到银行卡"
        android:textColor="#333333"
        android:textSize="45px" />

    <TextView

        android:id="@+id/tvWithdrawCount"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:gravity="center"
        android:paddingBottom="42px"
        android:paddingTop="42px"
        android:text="¥ 3000元"
        android:textColor="#333333"
        android:textSize="65px" />


    <cn.com.tianyudg.android_agent.base.basic.widget.input.PayPsdInputView
        android:id="@+id/ppiv"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_marginLeft="45px"
        android:layout_marginRight="45px"
        android:background="@color/bgWhite"
        android:inputType="numberPassword" />

    <TextView

        android:id="@+id/tvForgetPsw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"

        android:paddingBottom="44px"
        android:paddingRight="53px"
        android:paddingTop="27px"
        android:text=""
        android:textColor="#4385f5"
        android:textSize="36px" />

    <Button
        android:id="@+id/btnEnsure"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginBottom="70px"
        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"
        android:background="@drawable/shape_btn_round_app_color"
        android:text="确认"
        android:textColor="#FFF"
        android:textSize="48px" />


</LinearLayout>