<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ef6464"

    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rlToobar"
        android:layout_width="match_parent"
        android:layout_height="144px">


        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="156px"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingBottom="42px"
            android:paddingLeft="60px"
            android:paddingRight="60px"
            android:paddingTop="42px"
            android:src="@mipmap/arrow_left" />


        <TextView
            android:id="@+id/tvUNbind"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="30px"
            android:text="解绑"
            android:textColor="#fff"
            android:textSize="42px" />


    </com.zhy.autolayout.AutoRelativeLayout>


    <ImageView
        android:id="@+id/ivBankLogo"
        android:layout_width="140px"
        android:layout_height="140px"
        android:layout_marginTop="550px"
        android:background="@mipmap/bank_card_bg"
        android:padding="10px" />


    <TextView
        android:id="@+id/tvCardInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:text="中国银行储蓄卡"
        android:textColor="#fff"
        android:textSize="50px" />


    <TextView
        android:id="@+id/tvCardNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:text="**** **** **** 4512"
        android:textColor="#fff"
        android:textSize="67px" />

</LinearLayout>