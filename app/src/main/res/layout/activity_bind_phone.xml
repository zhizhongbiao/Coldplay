<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="49px"
        android:paddingTop="49px"
        android:text="绑定手机号码需要手机验证"
        android:textColor="#666666"
        android:textSize="42px" />


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="#FFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="60px"
            android:gravity="center_vertical"

            android:text="中国 +86"
            android:textColor="@color/appColor"
            android:textSize="42px" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/bgWhite"
            android:gravity="center_vertical"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:paddingLeft="50px"
            android:textColor="#333333"
            android:textColorHint="#cccccc"
            android:textSize="42px" />


        <ImageView
            android:id="@+id/ivClear"
            android:layout_width="180px"
            android:layout_height="match_parent"
            android:paddingBottom="30px"
            android:paddingLeft="60px"
            android:paddingRight="60px"
            android:paddingTop="30px"
            android:src="@mipmap/clear" />

    </com.zhy.autolayout.AutoLinearLayout>


    <Button
        android:id="@+id/btnNext"
        android:layout_width="960px"
        android:layout_height="135px"
        android:enabled="false"
        android:layout_marginTop="61px"
        android:background="@drawable/selector_button_bg"
        android:text="下一步"
        android:textColor="#FFF"
        android:textSize="42px" />


    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/llCheckbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <CheckBox
            android:id="@+id/cbIsAgreeStatement"
            android:layout_width="52px"
            android:layout_height="52px"
            android:layout_marginBottom="30px"
            android:layout_marginLeft="70px"
            android:layout_marginTop="30px"
            android:background="@drawable/selector_check_box"
            android:button="@null"
            android:checked="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="21px"
            android:text="我已阅读并同意"
            android:textColor="#999999"
            android:textSize="42px" />


        <TextView
            android:id="@+id/tvAboutStatement"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="服务声明"
            android:gravity="center_vertical"
            android:paddingRight="60px"
            android:textColor="@color/appColor"
            android:textSize="42px" />


    </com.zhy.autolayout.AutoLinearLayout>

</LinearLayout>