<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgWhite"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="72px"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/ivBankLogo"
            android:layout_width="80px"
            android:layout_height="80px"
            android:padding="10px"
            android:background="@mipmap/bank_card_bg"
             />


        <TextView
            android:id="@+id/tvBankName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:text="中国银行"
            android:textColor="@color/textMinor"
            android:textSize="45px" />


    </com.zhy.autolayout.AutoLinearLayout>


    <TextView
        android:id="@+id/tvWithdrawCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36px"
        android:text="82222222"
        android:textColor="@color/textMain"
        android:textSize="72px" />

    <TextView
        android:id="@+id/tvWithdrawState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35px"
        android:layout_marginTop="36px"
        android:text="已结算"
        android:textColor="@color/textMinor"
        android:textSize="42px" />


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="380px"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45px"
            android:text="处理进度"
            android:textSize="42px" />

        <ImageView
            android:id="@+id/ivProcession"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="150px"
            android:src="@mipmap/withdraw_state_success"
            />


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvOne"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="27px"
                android:textColor="#4385f5"
                android:text="付款成功" />

            <TextView
                android:id="@+id/tvTwo"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="#4385f5"
                android:paddingLeft="27px"
                android:text="银行处理中" />

            <TextView
                android:id="@+id/tvThree"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:textColor="#4385f5"
                android:gravity="center_vertical"
                android:paddingLeft="27px"
                android:text="到账成功" />


        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0px"
            android:layout_weight="1.4"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvTimeOne"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:textColor="@color/textMain"
                android:gravity="center_vertical|end"
                android:paddingRight="47px"
                android:text="2017-12-12 17:88:88" />

            <TextView
                android:id="@+id/tvTimeTwo"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:textColor="@color/textMain"
                android:gravity="center_vertical|end"
                android:paddingRight="47px"
                android:text="2017-12-12" />

            <TextView
                android:id="@+id/tvTimeThree"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:paddingRight="47px"
                android:textColor="@color/textMain"
                android:text="2017-12-12" />


        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/bgGray" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_marginTop="2px"
       >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="50px"
            android:gravity="center_vertical"
            android:text="提现到："
            android:textColor="@color/text_gray_deep"
            android:textSize="42px" />

        <TextView
            android:id="@+id/tvBankCardInfo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70px"
            android:gravity="center_vertical"
            android:text="中国银行(1245)  刘开源"
            android:textColor="@color/text_black"
            android:textSize="42px" />

    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/bgGray" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_marginTop="2px"
       >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="50px"
            android:gravity="center_vertical"
            android:text="创建时间："
            android:textColor="@color/text_gray_deep"
            android:textSize="42px" />

        <TextView
            android:id="@+id/tvCreateTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70px"
            android:gravity="center_vertical"
            android:text="2013-12-12"
            android:textColor="@color/text_black"
            android:textSize="42px" />

    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/bgGray" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_marginTop="2px"
       >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="50px"
            android:gravity="center_vertical"
            android:text="订单号："
            android:textColor="@color/text_gray_deep"
            android:textSize="42px" />

        <TextView
            android:id="@+id/tvOrderNo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70px"
            android:gravity="center_vertical"
            android:text="5465465465456"
            android:textColor="@color/text_black"
            android:textSize="42px" />

    </com.zhy.autolayout.AutoRelativeLayout>


</LinearLayout>