<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvTipMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="38px"
        android:paddingLeft="58px"
        android:paddingRight="58px"
        android:paddingTop="38px"
        android:text="我们已经给你们的手机号码 +86 158464545454 发送了一条短信验证码 "
        android:textColor="#666666"
        android:textSize="42px" />


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="#FFF">

        <EditText
            android:id="@+id/etMSMCode"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/bgWhite"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:inputType="number"
            android:paddingLeft="50px"
            android:textColor="#333333"
            android:textColorHint="#cccccc"
            android:textSize="42px" />


        <ImageView
            android:id="@+id/ivClear"
            android:layout_width="180px"
            android:layout_height="match_parent"
            android:paddingBottom="30px"
            android:paddingLeft="60px"
            android:paddingRight="60px"
            android:paddingTop="30px"
            android:src="@mipmap/clear" />

        <include layout="@layout/vertical_split_line" />

        <TextView
            android:id="@+id/tvGetCode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="60px"
            android:paddingRight="60px"

            android:text="重新发送"
            android:textColor="@drawable/selector_text_color"
            android:textSize="42px" />

    </com.zhy.autolayout.AutoLinearLayout>

    <EditText
        android:layout_marginTop="2px"
        android:id="@+id/etPhone"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@color/bgWhite"
        android:gravity="center_vertical"
        android:hint="请输入手机号码"
        android:inputType="phone"
        android:paddingLeft="50px"
        android:textColor="#333333"
        android:textColorHint="#cccccc"
        android:textSize="42px" />


    <Button
        android:id="@+id/btn_done"
        android:layout_width="960px"
        android:layout_height="135px"
        android:layout_marginTop="61px"
        android:background="@drawable/shape_btn_round_app_color"
        android:text="完成"
        android:textColor="#FFF"
        android:textSize="42px" />


</LinearLayout>