<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:orientation="vertical">


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="330px"
        android:background="#f0913e">

        <ImageView
            android:id="@+id/ivMoney"
            android:layout_width="72px"
            android:layout_height="72px"
            android:layout_marginLeft="166px"
            android:layout_marginTop="99px"
            android:src="@mipmap/wallet_money"
            app:layout_auto_basewidth="height" />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38px"
            android:layout_marginTop="109px"
            android:layout_toRightOf="@+id/ivMoney"
            android:text="余额"
            android:textColor="#FFF"
            android:textSize="48px" />


        <TextView
            android:id="@+id/tvMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivMoney"
            android:layout_toRightOf="@+id/ivMoney"

            android:padding="24px"
            android:text="- - -"
            android:textColor="#FFe4cc"
            android:textSize="36px" />


        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginBottom="105px"
            android:layout_marginTop="105px"
            android:background="#FFF" />


        <ImageView

            android:layout_width="72px"
            android:layout_height="72px"
            android:layout_marginRight="38px"
            android:layout_marginTop="107px"
            android:layout_toLeftOf="@+id/tvCredit"
            android:src="@mipmap/wallet_bank_card"
            app:layout_auto_basewidth="height" />

        <TextView
            android:id="@+id/tvCredit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="142px"
            android:layout_marginTop="109px"

            android:text="银行卡"
            android:textColor="#FFF"
            android:textSize="48px" />

        <TextView
            android:id="@+id/tvBindBankCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvMoney"
            android:layout_alignParentRight="true"
            android:layout_marginRight="117px"
            android:padding="24px"
            android:text="立即绑定"
            android:textColor="#FFe4cc"
            android:textSize="36px" />


    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rlWithdraw"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_marginTop="31px"
        android:background="#ffffff">


        <ImageView
            android:id="@+id/ivWithdraw"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="69px"

            android:src="@mipmap/cash" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="28px"
            android:layout_toRightOf="@+id/ivWithdraw"
            android:text="提现"
            android:textColor="#333333"
            android:textSize="42px" />

        <ImageView
            android:layout_width="42px"
            android:layout_height="42px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="59px"
            android:src="@mipmap/arrow_right" />


    </com.zhy.autolayout.AutoRelativeLayout>



    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rlBillRecord"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_marginTop="31px"
        android:background="#ffffff">


        <ImageView
            android:id="@+id/ivBillRecord"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="69px"

            android:background="@mipmap/bill_record" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="28px"
            android:layout_toRightOf="@+id/ivBillRecord"
            android:text="收入记录"
            android:textColor="#333333"
            android:textSize="42px" />

        <ImageView
            android:layout_width="42px"
            android:layout_height="42px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="59px"
            android:src="@mipmap/arrow_right" />


    </com.zhy.autolayout.AutoRelativeLayout>


</LinearLayout>