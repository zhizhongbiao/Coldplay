<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="330px"
    android:layout_marginTop="1px"
    android:background="#ffffff">


    <ImageView
        android:id="@+id/ivAlbum"
        android:layout_width="330px"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/place_holder" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:layout_marginLeft="30px"
        android:singleLine="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:ellipsize="marquee"
        android:layout_toRightOf="@+id/ivAlbum"
        android:text="楼盘名字"
        android:textColor="#333333"
        android:textSize="42px" />



    <ImageView
        android:id="@+id/ivCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/ivAlbum"
        android:layout_marginBottom="60px"
        android:layout_marginLeft="30px"
        android:src="@mipmap/count" />



    <TextView
        android:id="@+id/tvCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/ivCount"
        android:text="80"
        android:layout_marginBottom="60px"
        android:layout_marginLeft="30px"
        android:textColor="@color/bgBlack"
        android:textSize="36px" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/tvCount"
        android:text="|"
        android:layout_marginBottom="60px"
        android:layout_marginLeft="30px"
        android:textColor="@color/bgBlack"
        android:textSize="46px" />



    <ImageView
        android:id="@+id/ivView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/tvCount"
        android:layout_marginBottom="60px"
        android:layout_marginLeft="60px"
        android:src="@mipmap/eye" />



    <TextView
        android:id="@+id/tvView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/ivView"
        android:text="80"
        android:layout_marginBottom="60px"
        android:layout_marginLeft="30px"
        android:textColor="@color/bgBlack"
        android:textSize="36px" />



    <ImageView
        android:id="@+id/ivShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_alignParentBottom="true"
       android:layout_alignParentRight="true"
        android:padding="60px"
        android:src="@mipmap/share" />





</RelativeLayout>